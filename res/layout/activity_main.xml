<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvFotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuestras fotos"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:onClick="changeIntent"
        />

    <ImageView
        android:id="@+id/ivFotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/corazones" 
        android:adjustViewBounds="true"
        android:onClick="changeIntent" 
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/tvCanciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuestras canciones"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:onClick="changeIntent"
        />
	<ImageView
        android:id="@+id/ivCanciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/corazones" 
        android:adjustViewBounds="true"
        android:onClick="changeIntent" 
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/tvHistoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuestra historia"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:onClick="changeIntent"
        />
    <ImageView
        android:id="@+id/ivHistoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/corazones" 
        android:adjustViewBounds="true"
        android:onClick="changeIntent" 
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/tvLugares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuestros lugares"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:onClick="changeIntent"/>
    <ImageView
        android:id="@+id/ivLugares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/corazones" 
        android:adjustViewBounds="true"
        android:onClick="changeIntent" 
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/tvGustos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuestros gustos"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:onClick="changeIntent"/>
    <ImageView
        android:id="@+id/ivGustos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/corazones" 
        android:adjustViewBounds="true"
        android:onClick="changeIntent" 
        />
</LinearLayout>
